<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.HomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_weight="8"
        android:layout_height="0dp"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/bg_homepage">

        <RadioGroup
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/but1"
                android:layout_width="wrap_content"
                android:layout_height="56dp"

                android:layout_marginTop="40dp"
                android:button="@null"
                android:drawableBottom="@drawable/fang_home" />

            <RadioButton
                android:id="@+id/but2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:button="@null"
                android:drawableBottom="@drawable/tab_home_bottom_quanzis" />

            <RadioButton
                android:id="@+id/but3"
                android:layout_width="wrap_content"
                android:layout_height="91dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:button="@null"
                android:drawableBottom="@drawable/tab_gwc" />

            <RadioButton
                android:id="@+id/but4"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:button="@null"
                android:drawableBottom="@drawable/lian_home" />

            <RadioButton
                android:id="@+id/but5"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="40dp"
                android:button="@null"
                android:drawableBottom="@drawable/ren_home" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>