<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.HomeItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="312dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_height="214dp"></ImageView>
        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="24dp"
            android:text="2169"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/text_scs"
            android:layout_width="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/sp_12"
            android:text="asxacscaaaaaaaaaaaaaaaaaa"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/but_gou"
            android:drawableBottom="@drawable/shopcar"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <WebView
            android:id="@+id/web_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </WebView>

    </LinearLayout>

</ScrollView>