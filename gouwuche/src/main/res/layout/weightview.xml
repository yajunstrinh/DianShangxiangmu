        android:id="@+id/num_weight"
        android:layout_width="wrap_content"
        android:text="1"
        android:textSize="40dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/jia_weight"
        android:layout_width="wrap_content"
        android:textSize="40dp"
        android:text="+"
        android:layout_height="wrap_content" />
    </LinearLayout>