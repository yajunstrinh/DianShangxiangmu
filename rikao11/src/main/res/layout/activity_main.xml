<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_register_background"
    tools:context=".view.activity.MainActivity" android:gravity="center_vertical" android:layout_gravity="center_horizontal">

  <EditText
      android:id="@+id/edit_name_login"
      android:layout_width="wrap_content"
      android:hint="手机号"
      android:layout_marginLeft="100dp"
      android:ems="10"
      android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_pass_login"
        android:layout_width="wrap_content"
        android:layout_marginLeft="100dp"
        android:hint="密码"
        android:ems="10"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <CheckBox
           android:id="@+id/check"
           android:layout_width="wrap_content"
           android:layout_marginLeft="100dp"

           android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_regin"
            android:layout_width="wrap_content"
            android:text="注册"
            android:layout_marginLeft="100dp"

            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/but_login"
        android:layout_width="wrap_content"
        android:text="登录"
        android:layout_marginLeft="100dp"

        android:layout_height="wrap_content" />
</LinearLayout>